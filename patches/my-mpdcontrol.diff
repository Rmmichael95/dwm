diff --git a/Makefile b/Makefile
index 77bcbc0..82166a3 100644
--- a/Makefile
+++ b/Makefile
@@ -17,7 +17,7 @@ options:
 .c.o:
 	${CC} -c ${CFLAGS} $<
 
-${OBJ}: config.h config.mk
